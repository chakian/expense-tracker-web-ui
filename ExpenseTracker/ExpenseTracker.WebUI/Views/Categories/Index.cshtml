@model IEnumerable<ExpenseTracker.Persistence.Context.DbModels.Category>

@{
    Layout = "~/Views/Shared/_AuthorizedLayout.cshtml";
    ViewBag.Title = Resources.Page_Title_Categories_Index;
}

<p>
    @Html.ActionLink(Resources.Categories_Link_CreateNewCategory, "Create")
</p>

<div class="table-responsive">
    <table id="account-list-grid" class="table table-striped table-hover table-sm">
        <thead class="thead">
            <tr class="table-primary">
                <th scope="col">@Resources.Categories_Label_Name</th>
                <th scope="col">@Resources.Transaction_List_Label_Grid_Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <th scope="row">@category.Name</th>
                    <td>
                        @using (Html.BeginForm("Delete", "Categories", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <a href="@Url.Action("Edit", "Categories", new { id = category.CategoryId })" class="btn btn-sm btn-info"><i class="fas fa-edit"></i></a>
                            Html.Hidden("AccountId", category.CategoryId);
                            @*<button class="btn btn-sm btn-danger" type="submit"><i class="fas fa-trash-alt"></i></button>*@
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

