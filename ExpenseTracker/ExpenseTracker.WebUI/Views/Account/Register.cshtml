@model ExpenseTracker.WebUI.Models.Account.RegisterViewModel
@{
    ViewBag.Title = "Kayıt";
}

<div class="row">
    <div class="col-12 text-center">
        <h2 class="tm-block-title mb-4">Harcama Takibi - Kayıt</h2>
    </div>
</div>

<div class="row">
    <div class="col-12 mx-auto tm-login-col">
        <div class="row mt-2">
            <div class="col-12">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "tm-login-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control validate" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control validate" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control validate" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block text-uppercase">
                            Kayıt Ol
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
