@model List<ExpenseTracker.WebUI.Models.BaseTransactionModel.TransactionSummary>

<div class="table-responsive">
    <table id="transaction-list-grid" class="table table-striped table-hover table-sm">
        <thead class="thead">
            <tr class="table-primary">
                <th scope="col">@Resources.Transaction_List_Label_Date</th>
                <th scope="col">@Resources.Transaction_List_Label_Amount</th>
                <th scope="col">@Resources.Transaction_List_Label_Category</th>
                <th scope="col">@Resources.Transaction_List_Label_Description</th>
                <th scope="col">@Resources.Transaction_List_Label_Account</th>
                <th scope="col">@Resources.Transaction_List_Label_Grid_Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <th scope="row">@transaction.Date.ToLongDateString()</th>
                    <td>@transaction.Amount</td>
                    <td>@transaction.Category</td>
                    <td>@transaction.Description</td>
                    <td>@transaction.Account</td>
                    <td>
                        <a href="@Url.Action("Edit", "Transaction", new { transaction.TransactionId })" class="btn btn-sm btn-info"><i class="fas fa-edit"></i></a>
                        <button type="button" class="delete-transaction-button btn btn-sm btn-danger" data-toggle="modal" data-target="#modal-delete" data-id="@transaction.TransactionId">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="modal-delete">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">@Resources.Transaction_Delete_Modal_Header</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="@Resources.Transaction_Delete_Modal_Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>@Resources.Transaction_Delete_Modal_Text</p>
            </div>
            <div class="modal-footer justify-content-between">
                @using (Html.BeginForm("Delete", "Transaction", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    @Html.Hidden("TransactionId")
                    <button type="button" class="btn btn-outline-light" data-dismiss="modal">@Resources.Transaction_Delete_Modal_No</button>
                    <button type="submit" class="btn btn-outline-light">@Resources.Transaction_Delete_Modal_Yes</button>
                }
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
