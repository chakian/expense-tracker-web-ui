@model ExpenseTracker.WebUI.Models.Report.BudgetPlanReportModel

@{
    Layout = "~/Views/Shared/_AuthorizedLayout.cshtml";
    ViewBag.Title = "Bütçe Planı Raporu";
}

<h2>Bütçe Raporu - @Model.BudgetPlan.MonthName @Model.BudgetPlan.Year.ToString()</h2>

<div class="row">
    <div class="col-md-12 mx-auto">
        @for (int i = 0; i < Model.PlanCategories.Count; i++)
        {
            var category = Model.PlanCategories[i];
            <div class="row">
                <div class="col-md-6">@Html.Label("CategoryLabel", category.CategoryName)</div>
                <div class="col-md-3">@Html.Label("PlannedAmountLabel", Model.PlanCategories[i].PlannedAmount.ToString())</div>
                <div class="col-md-3">@Html.Label("SpentAmountLabel", Model.PlanCategories[i].SpentAmount.ToString())</div>
            </div>
        }
    </div>
</div>
