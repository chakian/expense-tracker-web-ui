@model IEnumerable<ExpenseTracker.Persistence.Context.DbModels.Account>

@{
    Layout = "~/Views/Shared/_AuthorizedLayout.cshtml";
    ViewBag.Title = Resources.Page_Title_BudgetAccount_Index;
}

<p>
    @Html.ActionLink(Resources.BudgetAccount_Link_CreateNewAccount, "Create")
</p>

<div class="table-responsive">
    <table id="account-list-grid" class="table table-striped table-hover table-sm">
        <thead class="thead">
            <tr class="table-primary">
                <th scope="col">@Resources.BudgetAccount_Label_AccountName</th>
                <th scope="col">@Resources.BudgetAccount_Label_AccountType</th>
                <th scope="col">@Resources.BudgetAccount_Label_CurrentBalance</th>
                <th scope="col">@Resources.Transaction_List_Label_Grid_Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <th scope="row">@account.Name</th>
                    <td>@account.AccountType.Name</td>
                    <td>@account.CurrentBalance</td>
                    <td>
                        @using (Html.BeginForm("Delete", "BudgetAccount", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <a href="@Url.Action("Edit", "BudgetAccount", new { id = account.AccountId })" class="btn btn-sm btn-info"><i class="fas fa-edit"></i></a>
                            Html.Hidden("AccountId", account.AccountId);
                            @*<button class="btn btn-sm btn-danger" type="submit"><i class="fas fa-trash-alt"></i></button>*@
                        }
                        @*<a href="@Url.Action("Edit", "Transaction", new { transaction.TransactionId })" class="btn btn-sm btn-info"><i class="fas fa-edit"></i></a>
                            <button type="button" class="delete-transaction-button btn btn-sm btn-danger" data-toggle="modal" data-target="#modal-delete" data-id="@transaction.TransactionId">
                                <i class="fas fa-trash-alt"></i>
                            </button>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

