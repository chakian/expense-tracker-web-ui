<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("HT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    string budgetName = ViewBag.ActiveBudgetName;
                    <li>@Html.ActionLink("Harcama Girişi", "Add", "Expense")</li>
                    <li>@Html.ActionLink("Harcamalar", "List", "Expense")</li>
                    <li>@Html.ActionLink("Rapor", "Index", "Report")</li>
                    if (string.IsNullOrEmpty(budgetName))
                    {
                        <li>@Html.ActionLink("Aktif Bütçe Belirle", "SelectActiveBudget", "Budget")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Aktif Bütçe: '" + budgetName + "'", "Manage", "Budget")</li>
                    }
                    @*<li>@Html.ActionLink("Bildirim Ayarları", "Notifications", "User")</li>*@
                    <li>@Html.ActionLink("Çıkış", "Logout", "Account")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Giriş", "Login", "Account")</li>
                    <li>@Html.ActionLink("Kayıt", "Register", "Account")</li>
                }
            </ul>
        </div>
    </div>
</div>
