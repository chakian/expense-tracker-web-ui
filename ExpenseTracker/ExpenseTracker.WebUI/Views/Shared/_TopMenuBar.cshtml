<header class="site-navbar py-4 bg-white" role="banner">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-11 col-xl-2">
                <h1 class="mb-0 site-logo">@Html.ActionLink("HT", "Index", "Home", new { area = "" }, new { @class = "text-black h2 mb-0" })</h1>
            </div>
            <div class="col-12 col-md-10 d-none d-xl-block">
                <nav class="site-navigation position-relative text-right" role="navigation">
                    <ul class="site-menu js-clone-nav mr-auto d-none d-lg-block">
                        @if (User.Identity.IsAuthenticated)
                        {
                            string budgetName = ViewBag.ActiveBudgetName;

                            <li class="active">@Html.ActionLink("Harcama Girişi", "Add", "Transaction")</li>
                            <li>@Html.ActionLink("Harcamalar", "List", "Transaction")</li>
                            <li class="has-children">
                                @Html.ActionLink("Rapor", "Index", "Report")
                                <ul class="dropdown">
                                    <li><a href="services.html">Web Applications</a></li>
                                    <li><a href="services.html">WordPress Dev</a></li>
                                    <li><a href="services.html">Mobile Applications</a></li>
                                    <li><a href="services.html">eCommerce</a></li>
                                </ul>
                            </li>
                            if (string.IsNullOrEmpty(budgetName))
                            {
                                <li>@Html.ActionLink("Aktif Bütçe Belirle", "SelectActiveBudget", "Budget")</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Aktif Bütçe: '" + budgetName + "'", "Manage", "Budget")</li>
                            }
                            @*<li>@Html.ActionLink("Bildirim Ayarları", "Notifications", "User")</li>*@
                            <li>@Html.ActionLink("Çıkış", "Logout", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Giriş", "Login", "Account")</li>
                            <li>@Html.ActionLink("Kayıt", "Register", "Account")</li>
                        }
                    </ul>
                </nav>
            </div>
            <div class="d-inline-block d-xl-none ml-md-0 mr-auto py-3" style="position: relative; top: 3px;"><a href="#" class="site-menu-toggle js-menu-toggle text-black"><span class="icon-menu h3"></span></a></div>
        </div>
    </div>
</header>
