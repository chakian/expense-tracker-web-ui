@{
    Layout = "~/Views/Shared/_UnauthorizedLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <p class="card-text">
                    @Resources.Home_Unauthorized_Description
                </p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="card card-primary card-outline">
            <div class="card-body">
                <p class="card-text">
                    @Resources.Home_LoginDescription
                </p>
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-block">@Resources.Nav_Login</a>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card card-primary card-outline">
            <div class="card-body">
                <p class="card-text">
                    @Resources.Home_RegisterDescription
                </p>
                <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-block">@Resources.Nav_Register</a>
            </div>
        </div>
    </div>
</div>
